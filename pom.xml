    <properties>
        <COMMON.NAME>uzm-common</COMMON.NAME>
        <protocollib.version>4.5.0</protocollib.version>
    </properties>
    <build>
        <defaultGoal>clean package install</defaultGoal>
    </build>
    <modules>
        <module>Common</module>
        <module>v1_8_R3</module>
        <module>v1_12_R1</module>
